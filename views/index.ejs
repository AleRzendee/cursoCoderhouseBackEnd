<%- include('layout') %>

<h1>Minhas Tarefas</h1>
<ul>
  <% tasks.forEach(task => { %>
    <li><%= task.title %></li>
  <% }) %>
</ul>

<form action="/tasks/add" method="POST">
  <input type="text" name="title" placeholder="Nova tarefa" required />
  <button type="submit">Adicionar</button>
</form>
